from datetime import datetime

class Pessoa():

    def __init__(self, name, dayBirth, monthBirth, yearBirth):
        self.nome = name
        self.data_nascimento = datetime(yearBirth, monthBirth, dayBirth)
        self.idade = self.calcular_idade()
        self.endereco = ''
    
    def calcular_idade(self):
        today = datetime.now()
        return int((today-self.data_nascimento).days//365.2425)

    def cadastrar_endereco(self,rua,numero):
        self.endereco = f'{rua}, {numero}'
        
    def mostrar(self):
        print(f"Nome do usuário é {self.nome}, tem {User.calcular_idade()} anos e mora na {self.endereco}")
        
User = Pessoa("Matheus", 30, 5, 2006)
User.calcular_idade()
User.cadastrar_endereco("Rua cinza", 15)
User.mostrar()
